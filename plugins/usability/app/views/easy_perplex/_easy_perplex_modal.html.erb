<div class='modal-header'>
  <button type='button' class='us_close' data-dismiss='modal' aria-hidden='true'>&times;</button>
  <h3><%= l(:label_usability_easy_perplex_modal_header) %></h3>
</div>
<div class='modal-body'>
  <%= form_tag url_for({ action: :easy_perplex_actions }), id: 'us_subordinate_form', method: :get, remote: true do %>
    <div class='us-perplex-tabular'>
      <label for='user_id'><%= l(:label_usability_easy_perplex_subordinate) %></label>
      <span><%= l(:label_usability_easy_perplex_subordinate_description) %>:</span>
      <%= select_tag 'user_id', options_for_select(@unders.collect { |it| [it.name, it.id] }), include_blank: true, id: 'us-subordinates-select2', style: 'width: 100%' %>
      <!-- <div id="us-perplex-loader" style="display: inline;">&nbsp;&nbsp;&nbsp;&nbsp;</div> -->
    </div>
  <% end %>

  <div id="us-perplex-actions" class="us-perplex-actions"></div>
</div>
<div class="modal-footer">
  <%= button_tag l(:label_usability_easy_perplex_modal_cancel), 'aria-hidden' => 'true',  'data-dismiss' => 'modal' %>
</div>